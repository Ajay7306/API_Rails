<div class="flex flex-col gap-5 justify-center items-center w-full ">
        <div id="photos" class="w-full" >
        </div>
        <button id="myButton" class="bg-white rounded-[30px] sm:w-[300px] w-[180px] sm:h-[100px] h-[80px] text-[24px] text-[#1c1c1c] font-semibold">
            Load More
        </button>
</div>
<script type="text/javascript">
    $("document").ready(function(){
        var ourRequest = new XMLHttpRequest();
        ourRequest.open('GET','https://jsonplaceholder.typicode.com/photos')
        ourRequest.onload = function(){
            var ourData = JSON.parse(ourRequest.responseText);
            console.log(ourData)
            var num = 100;
            $("#myButton").click(function(){
                var incrementAmount = 100; 
                num += incrementAmount;
                console.log(num)
                 for(let i = 0; i <= num; i++){
                    $("#photos").append(`div class="container mx-auto py-28 px-2 w-full">
                            <div class="flex flex-row gap-4 bg-[#191A1E] text-white hover:text-[#1c1c1c] hover:bg-white rounded-2xl p-6 w-full justify-center items-center">
                                <img
                                src=${ourData[i].url}
                                alt="photos"
                                class="w-full h-full  object-cover rounded-[30px]"
                                />
                                <h1 class="font-bold text-[20px]  capitalize h-[50px] w-full">
                                ${ourData[i].title}
                                </h1>
                            </div>
                     </div>`)
                 }

            })
        }
        ourRequest.send();
    })
